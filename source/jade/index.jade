doctype html
html
  head
    meta(charset='utf-8')
    title My Movie Application
    link(href='style.css', rel='stylesheet')
    link(href='bootstrap/dist/css/bootstrap.css' rel="stylesheet")
  body
    header
      .container
        .row
          h1.col-lg-12.text-center My Movie Application
        .row
          input(type="text")#searchCriteria.col-lg-6.col-md-6
          button#mainBtn.col-lg-6.col-md-6 Search
    main
      .container
        .row
          .col-md-8
            .mainMovieData
              h1#movieTitle 
              span#movieReleaseDate
              span#movieimdbRating
              span#movieRunTime
            p#description 
            section#movieData
              p#movieGenre 
              p#movieDirector Director :
              p#movieActors Actors :
              p#movieWriter Writer :
              p#movieAwards Awards :
          .col-md-4
            img#poster
    footer
    script(src='script.js')
    script(src='jquery/dist/jquery.js')
    script(src='bootstrap/dist/js/bootstrap.js')
